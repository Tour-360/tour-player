#notification
    position absolute
    width 100%
    height 0
    left 0
    top 50%
    margin-top -32px
    text-align center

    span
        display inline-block
        color white
        background $transparent-black
        line-height 1.6em
        padding 5px 32px
        border-radius 16px
        text-shadow 0 1px rgba(0, 0, 0, .3)
